[Unit]
Description=Secure Diode System Logger (SDSyslog) Receiver
Documentation=https://github.com/EvSecDev/SDSyslog
After=systemd-journald.service

[Service]
User=root
Group=adm
StandardOutput=journal
StandardError=journal
ExecStart=$executableFilePath receive --config $receiveConfigFilePath
Type=exec
RestartSec=60
Restart=on-abnormal

[Install]
WantedBy=multi-user.target
