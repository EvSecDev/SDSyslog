[Unit]
Description=Secure Diode System Logger (SDSyslog) Sender
Documentation=https://github.com/EvSecDev/SDSyslog
After=network.target systemd-journald.service

[Service]
User=root
Group=adm
StandardOutput=journal
StandardError=journal
ExecStart=$executableFilePath send --config $sendConfigFilePath
Type=notify-reload
RestartSec=60
Restart=on-abnormal

[Install]
WantedBy=multi-user.target
